<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.unice.mbds.maslow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayListsActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ListeMusiquesActivity"
            android:parentActivityName=".PlayListsActivity" />
        <activity
            android:name=".ListeConsoEnergieActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ListeLumieresActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ListeDiffuseurOdeursActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>
