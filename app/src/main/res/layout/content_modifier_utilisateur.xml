<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.unice.mbds.maslow.view.activity.ModifierUtilisateurActivity"
    tools:showIn="@layout/activity_modifier_utilisateur">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MODIFIER UTILISATEUR"
        android:id="@+id/textViewModifierUtilisateur"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nom"
        android:ems="10"
        android:id="@+id/editTextModifierNomUtilisateur"
        android:layout_below="@+id/textViewModifierUtilisateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Prenom"
        android:ems="10"
        android:id="@+id/editTextModifierPrenomUtilisateur"
        android:layout_below="@+id/editTextModifierNomUtilisateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Identiffiant"
        android:ems="10"
        android:id="@+id/editTextModifierIdentifiantUtilisateur"
        android:layout_below="@+id/editTextModifierPrenomUtilisateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mot de passe"
        android:ems="10"
        android:id="@+id/editTextModifierPasswordUtilisateur"
        android:layout_below="@+id/editTextModifierIdentifiantUtilisateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Id"
        android:ems="10"
        android:id="@+id/editTextModifierUtilisateur"
        android:layout_below="@+id/editTextModifierPasswordUtilisateur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextModifierPasswordUtilisateur"
        android:layout_alignEnd="@+id/editTextModifierPasswordUtilisateur" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODIFIER UTILISATEUR"
        android:id="@+id/buttonModifierUtilisateur"
        android:layout_below="@+id/editTextModifierUtilisateur"
        android:layout_marginTop="56dp"
        android:layout_alignRight="@+id/editTextModifierUtilisateur"
        android:layout_alignEnd="@+id/editTextModifierUtilisateur" />
</RelativeLayout>
